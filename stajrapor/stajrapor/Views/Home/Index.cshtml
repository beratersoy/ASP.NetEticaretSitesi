@using stajrapor.Entity;
@model IEnumerable<Product>

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">

                @Html.Action("_CategoryList", "Categories")

                <li style="border:0"> &nbsp;</li>
                @Html.Action("Sumary", "Cart")
            </ul>
        </div>

       


    </div>
    <div class="span9">
        <div class="well np">
           @Html.Action("Slider","Home")
        </div>
        <!--
        New Products
        -->
        <div class="well well-small">
            <h3>New Products </h3>
            <hr class="soften" />

            <div class="row-fluid">
                <ul class="thumbnails">
                    @foreach (var item in Model)
                    {
                        <li class="span4">
                            <div class="thumbnail">


                                <a href="/Home/ProductDetails/@item.Id"><img src="/Content/image/@item.Image" style="max-width:207px; max-height:206px; min-height:267px;" alt=""></a>
                                <div class="caption cntr">
                                    <p>@item.Name</p>
                                    <p><strong>@item.price ₺</strong></p>
                                    <h4><a class="shopBtn" href="/Home/ProductDetails/@item.Id" title="add to cart"> Görüntüle </a></h4>

                                    <br class="clr">
                                </div>
                            </div>
                        </li>
                    }


                </ul>
            </div>
        </div>
        <!--
        Featured Products
        -->




    </div>
</div>